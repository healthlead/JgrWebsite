---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Services - JGR Construction">
  <Navbar />
  
  <!-- Hero Section -->
  <section class="bg-[#773B3C] text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">Our Services</h1>
      <p class="text-xl md:text-2xl max-w-4xl mx-auto">
        Comprehensive structural contracting services for residential and commercial construction projects throughout South Florida
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Service 1 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Conventional Concrete Shells</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              High-rise residential and commercial concrete shell construction with advanced forming systems and quality control.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• Advanced forming systems</li>
              <li>• Quality control processes</li>
              <li>• High-rise expertise</li>
              <li>• Commercial & residential</li>
            </ul>
          </div>
        </div>

        <!-- Service 2 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Masonry & Stonework</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Decorative and structural masonry including natural stone, brick, and architectural block installations.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• Natural stone installation</li>
              <li>• Brick construction</li>
              <li>• Architectural blocks</li>
              <li>• Decorative elements</li>
            </ul>
          </div>
        </div>

        <!-- Service 3 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Cast-in-Place Concrete</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Custom concrete solutions for unique architectural requirements and specialized structural applications.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• Custom architectural designs</li>
              <li>• Specialized applications</li>
              <li>• Unique structural solutions</li>
              <li>• Precision execution</li>
            </ul>
          </div>
        </div>

        <!-- Service 4 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Structural Engineering Support</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Collaboration with structural engineers to ensure optimal design implementation and code compliance.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• Code compliance verification</li>
              <li>• Design optimization</li>
              <li>• Engineering collaboration</li>
              <li>• Technical expertise</li>
            </ul>
          </div>
        </div>

        <!-- Service 5 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Project Management</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Comprehensive project oversight from initial planning through final completion and quality assurance.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• Timeline management</li>
              <li>• Quality assurance</li>
              <li>• Resource coordination</li>
              <li>• Progress reporting</li>
            </ul>
          </div>
        </div>

        <!-- Service 6 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-[#E7B008] p-6">
            <h3 class="text-2xl font-bold text-[#773B3C]">Safety & Compliance</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              OSHA-certified safety protocols and comprehensive compliance with all local and federal regulations.
            </p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>• OSHA certified processes</li>
              <li>• Safety training programs</li>
              <li>• Regulatory compliance</li>
              <li>• Risk management</li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-[#773B3C]">Our Process</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        
        <div class="text-center">
          <div class="w-16 h-16 bg-[#E7B008] rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-[#773B3C]">1</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-[#773B3C]">Consultation</h3>
          <p class="text-gray-600">Initial project assessment and requirement analysis</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#E7B008] rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-[#773B3C]">2</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-[#773B3C]">Planning</h3>
          <p class="text-gray-600">Detailed project planning and timeline development</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#E7B008] rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-[#773B3C]">3</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-[#773B3C]">Execution</h3>
          <p class="text-gray-600">Professional construction with quality oversight</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#E7B008] rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-[#773B3C]">4</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-[#773B3C]">Completion</h3>
          <p class="text-gray-600">Final inspection and project handover</p>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-[#773B3C] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Start Your Project?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contact us today for a consultation and let's discuss how we can bring your construction vision to life.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="bg-[#E7B008] text-[#773B3C] px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-400 transition-colors"
        >
          Get a Quote
        </a>
        <a 
          href="tel:+13052627306" 
          class="bg-transparent border-2 border-[#E7B008] text-[#E7B008] px-8 py-4 rounded-lg text-lg font-semibold hover:bg-[#E7B008] hover:text-[#773B3C] transition-colors"
        >
          Call (305) 262-7306
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>