---
// Navbar component
---

<header class="bg-[#773B3C] text-white shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <nav class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold hover:text-[#E7B008] transition-colors">
          JGR Construction
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="hover:text-[#E7B008] transition-colors">Home</a>
        <a href="/services" class="hover:text-[#E7B008] transition-colors">Services</a>
        <a href="/projects" class="hover:text-[#E7B008] transition-colors">Projects</a>
        <a href="/about" class="hover:text-[#E7B008] transition-colors">About</a>
        <a href="/contact" class="hover:text-[#E7B008] transition-colors">Contact</a>
        <a href="/faq" class="hover:text-[#E7B008] transition-colors">FAQ</a>
        <a href="/blog" class="hover:text-[#E7B008] transition-colors">Hard Hat Hub</a>
        <a 
          href="tel:+13052627306" 
          class="bg-[#E7B008] text-[#773B3C] px-4 py-2 rounded-lg font-semibold hover:bg-yellow-400 transition-colors"
        >
          (305) 262-7306
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a href="/" class="hover:text-[#E7B008] transition-colors">Home</a>
        <a href="/services" class="hover:text-[#E7B008] transition-colors">Services</a>
        <a href="/projects" class="hover:text-[#E7B008] transition-colors">Projects</a>
        <a href="/about" class="hover:text-[#E7B008] transition-colors">About</a>
        <a href="/contact" class="hover:text-[#E7B008] transition-colors">Contact</a>
        <a href="/faq" class="hover:text-[#E7B008] transition-colors">FAQ</a>
        <a href="/blog" class="hover:text-[#E7B008] transition-colors">Hard Hat Hub</a>
        <a 
          href="tel:+13052627306" 
          class="bg-[#E7B008] text-[#773B3C] px-4 py-2 rounded-lg font-semibold hover:bg-yellow-400 transition-colors w-fit"
        >
          (305) 262-7306
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });
</script>