const categories = ["All", "Technical Insights", "Safety", "Sustainability", "Industry Trends", "Project Management"];
---

<Layout title="Hard Hat Hub - JGR Construction Blog" description="Stay updated with industry insights, technical articles, and construction expertise from JGR Construction's Hard Hat Hub blog.">
  <Navbar />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-r from-burgundy-primary to-prussian-blue">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl font-bold text-white mb-6">Hard Hat Hub</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        Industry insights, technical expertise, and construction knowledge from the JGR Construction team
      </p>
    </div>
  </section>

  <!-- Instagram Feed -->
  <section class="py-12 bg-white border-b border-gray-200">
    <div class="container mx-auto px-6">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Follow Our Work</h2>
        <p class="text-gray-600">Behind-the-scenes glimpses of our projects in progress</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {instagramPosts.map((post) => (
          <div class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <img 
              src={post.image} 
              alt="JGR Construction work"
              class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-70 transition-all duration-300 flex items-end">
              <div class="p-4 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <p class="text-sm mb-2">{post.description}</p>
                <p class="text-xs text-blue-200">{post.hashtags}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <!-- Category Filter -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        {categories.map((category) => (
          <button class="category-filter px-4 py-2 rounded-full border border-gray-300 hover:border-burgundy-primary hover:text-burgundy-primary transition-colors">
            {category}
          </button>
        ))}
      </div>

      <!-- Featured Article -->
      <div class="mb-16">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/2">
              <img 
                src={blogPosts[0].image} 
                alt={blogPosts[0].title}
                class="w-full h-64 md:h-full object-cover"
              />
            </div>
            <div class="md:w-1/2 p-8">
              <div class="flex items-center mb-4">
                <span class="bg-burgundy-primary text-white px-3 py-1 rounded-full text-sm font-semibold mr-4">
                  Featured
                </span>
                <span class="text-gray-500 text-sm">{blogPosts[0].category}</span>
              </div>
              <h2 class="text-2xl font-bold text-gray-900 mb-4 hover:text-burgundy-primary transition-colors">
                {blogPosts[0].title}
              </h2>
              <p class="text-gray-600 mb-6 leading-relaxed">
                {blogPosts[0].excerpt}
              </p>
              <div class="flex items-center text-sm text-gray-500">
                <span class="mr-4">By {blogPosts[0].author}</span>
                <span class="mr-4">{blogPosts[0].date}</span>
                <span>{blogPosts[0].readTime}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Blog Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.slice(1).map((post) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-black bg-opacity-50 text-white px-3 py-1 rounded-full text-sm">
                  {post.category}
                </span>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3 group-hover:text-burgundy-primary transition-colors line-clamp-2">
                {post.title}
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500">
                <span>By {post.author}</span>
                <span>{post.readTime}</span>
              </div>
              <div class="text-sm text-gray-500 mt-2">{post.date}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-20 bg-gradient-to-r from-burgundy-primary to-prussian-blue">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Stay Updated</h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Subscribe to Hard Hat Hub for the latest industry insights, project updates, and construction expertise.
      </p>
      <div class="max-w-md mx-auto">
        <div class="flex gap-4">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-sunflower-yellow focus:border-sunflower-yellow"
          />
          <button class="bg-sunflower-yellow text-rich-black hover:bg-yellow-500 px-6 py-3 rounded-lg font-semibold transition-colors">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Category filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const categoryFilters = document.querySelectorAll('.category-filter');
    
    categoryFilters.forEach(filter => {
      filter.addEventListener('click', function() {
        // Remove active class from all filters
        categoryFilters.forEach(f => {
          f.classList.remove('bg-burgundy-primary', 'text-white');
          f.classList.add('border-gray-300');
        });
        
        // Add active class to clicked filter
        this.classList.add('bg-burgundy-primary', 'text-white');
        this.classList.remove('border-gray-300');
        
        // Filter logic would go here for a dynamic implementation
      });
    });
    
    // Set initial active state for "All" filter
    if (categoryFilters.length > 0) {
      categoryFilters[0].classList.add('bg-burgundy-primary', 'text-white');
      categoryFilters[0].classList.remove('border-gray-300');
    }
  });
</script>