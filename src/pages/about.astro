---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Icon rendering function for values
function renderIcon(iconKey: string, className: string = "") {
  const paths = iconPaths[iconKey as keyof typeof iconPaths];
  return `<svg class="${className}" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    ${paths.map(path => {
      if (typeof path === 'string') {
        return `<path d="${path}" />`;
      } else if (path.type === 'circle') {
        return `<circle ${Object.entries(path.props).map(([k, v]) => `${k}="${v}"`).join(' ')} />`;
      }
      return `<path d="${path.props.d}" />`;
    }).join('')}
  </svg>`;
}

const iconPaths = {
  'users': [
    "M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2",
    "M16 3.128a4 4 0 0 1 0 7.744",
    "M22 21v-2a4 4 0 0 0-3-3.87",
    { type: 'circle', props: { cx: "9", cy: "7", r: "4" } }
  ],
  'zap': [
    "M4 14a1 1 0 0 1-.78-1.63L9.9 5.24a1 1 0 0 1 1.58 0l6.68 7.13A1 1 0 0 1 17.38 14Z",
    "M12 11v9"
  ],
  'check-circle': [
    { type: 'circle', props: { cx: "12", cy: "12", r: "10" } },
    "m9 12 2 2 4-4"
  ],
  'shield': [
    "M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
  ]
};

const values = [
  {
    icon: 'users',
    title: "We Are One",
    description: "United team approach to every project challenge",
  },
  {
    icon: 'zap',
    title: "Driven to Excellence",
    description: "Continuous improvement in quality and performance",
  },
  {
    icon: 'check-circle',
    title: "Relentless",
    description: "Unwavering commitment to project success",
  },
];
---

<Layout title="About - JGR Construction" description="Learn about JGR Construction's history, mission, and team. Building excellence in Miami since 2009 with expertise in structural concrete and masonry.">
  <Navbar />
  
  <div class="pt-20 min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-r from-primary-burgundy to-prussian-blue text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">About JGR Construction</h1>
          <p class="text-xl md:text-2xl text-blue-100 max-w-4xl mx-auto leading-relaxed">
            Building Excellence Since 2009. From a small team to Miami's premier 
            structural contractors, our journey is one of growth, dedication, and unwavering quality.
          </p>
        </div>
      </div>
    </section>

    <!-- Company Story -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">Building Excellence Since 2009</h2>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              Founded in 2009, JGR Construction Inc. has grown from a small team of 17-18 employees 
              to a premier structural contractor with hundreds of skilled workers and an extensive 
              equipment portfolio serving South Florida's construction industry.
            </p>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Our specialization in concrete and masonry construction has made us the trusted partner 
              for Miami's most prestigious residential and commercial developments, from luxury 
              condominiums to mixed-use complexes.
            </p>
            
            <!-- Company Values -->
            <div class="space-y-6">
              {values.map((value, index) => (
                <div class="flex items-start">
                  <div class="bg-ocean-blue/10 w-12 h-12 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                    <Fragment set:html={renderIcon(value.icon, "w-6 h-6 text-ocean-blue")} />
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1">{value.title}</h3>
                    <p class="text-gray-600">{value.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <div class="relative">
            <img 
              src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600" 
              alt="JGR Construction team of skilled professionals" 
              class="rounded-2xl shadow-2xl w-full" 
            />
            
            <!-- Safety & Quality Badge -->
            <div class="absolute -bottom-6 -left-6 bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-center">
                <Fragment set:html={renderIcon('shield', "w-8 h-8 text-construction-green mr-3")} />
                <div>
                  <div class="font-bold text-gray-900">OSHA Certified</div>
                  <div class="text-sm text-gray-600">Safety Excellence</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Our Growth Story</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Numbers that reflect our commitment to excellence and continuous growth in the industry
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-ocean-blue mb-2">15+</div>
            <div class="text-gray-600 font-medium">Years of Experience</div>
            <div class="text-sm text-gray-500 mt-1">Since 2009</div>
          </div>
          
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-sunset-orange mb-2">200+</div>
            <div class="text-gray-600 font-medium">Skilled Workers</div>
            <div class="text-sm text-gray-500 mt-1">Highly trained professionals</div>
          </div>
          
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-construction-green mb-2">50+</div>
            <div class="text-gray-600 font-medium">Projects Completed</div>
            <div class="text-sm text-gray-500 mt-1">Across South Florida</div>
          </div>
          
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-deep-blue mb-2">7</div>
            <div class="text-gray-600 font-medium">Active Projects</div>
            <div class="text-sm text-gray-500 mt-1">Currently in progress</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Safety & Training -->
    <section class="py-20 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Safety & Training Excellence</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Our commitment to safety and continuous training ensures the highest standards on every project
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div class="bg-construction-green/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <Fragment set:html={renderIcon('shield', "w-8 h-8 text-construction-green")} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Full-Time Safety Manager</h3>
            <p class="text-gray-600">Dedicated safety professionals plus project-specific coordinators on every site</p>
          </div>
          
          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div class="bg-ocean-blue/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <Fragment set:html={renderIcon('users', "w-8 h-8 text-ocean-blue")} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">OSHA 30-Hour Training</h3>
            <p class="text-gray-600">In-house training programs including forklift certification and defensive driving</p>
          </div>
          
          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div class="bg-sunset-orange/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <Fragment set:html={renderIcon('check-circle', "w-8 h-8 text-sunset-orange")} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Zero Tolerance Policy</h3>
            <p class="text-gray-600">Comprehensive drug policy with pre-hire and random testing protocols</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Partner with Experience</h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Join the many satisfied clients who trust JGR Construction with their most important projects.
        </p>
        <a 
          href="/contact" 
          class="bg-sunset-orange text-white px-8 py-4 rounded-xl font-semibold hover:bg-orange-600 transition-colors inline-block"
        >
          Let's Build Together
        </a>
      </div>
    </section>
  </div>

  <Footer />
</Layout>