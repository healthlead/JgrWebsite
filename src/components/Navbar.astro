---
import { companyInfo } from '../data/company';
---

<nav class="bg-white shadow-lg fixed w-full z-50 top-0">
  <div class="container mx-auto px-6">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <img 
          src="/jgr-logo.png" 
          alt="JGR Construction - Go to Homepage" 
          class="h-12 w-auto"
        />
        <div>
          <div class="text-sm font-semibold text-gray-900">{companyInfo.name}</div>
          <div class="text-xs text-gray-500">{companyInfo.tagline}</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/services" class="text-gray-700 hover:text-burgundy-primary font-medium transition-colors">Services</a>
        <a href="/projects" class="text-gray-700 hover:text-burgundy-primary font-medium transition-colors">Projects</a>
        <a href="/about" class="text-gray-700 hover:text-burgundy-primary font-medium transition-colors">About</a>
        <a href="/faq" class="text-gray-700 hover:text-burgundy-primary font-medium transition-colors">FAQ</a>
        <a href="/blog" class="text-gray-700 hover:text-burgundy-primary font-medium transition-colors">Hard Hat Hub</a>
        <a href={`tel:${companyInfo.phone}`} class="text-burgundy-primary hover:text-prussian-blue font-semibold transition-colors">
          {companyInfo.phone}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-2">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden bg-white border-t border-gray-200 hidden">
      <div class="py-4 space-y-4">
        <a href="/services" class="block text-gray-700 hover:text-burgundy-primary font-medium">Services</a>
        <a href="/projects" class="block text-gray-700 hover:text-burgundy-primary font-medium">Projects</a>
        <a href="/about" class="block text-gray-700 hover:text-burgundy-primary font-medium">About</a>
        <a href="/faq" class="block text-gray-700 hover:text-burgundy-primary font-medium">FAQ</a>
        <a href="/blog" class="block text-gray-700 hover:text-burgundy-primary font-medium">Hard Hat Hub</a>
        <a href={`tel:${companyInfo.phone}`} class="block text-burgundy-primary font-semibold py-2">
          {companyInfo.phone}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>