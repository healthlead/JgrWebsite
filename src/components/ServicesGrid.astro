---
import { services } from '../data/services';
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Expertise</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Comprehensive structural contracting services with unmatched quality and precision
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow group">
          <div class="text-4xl mb-6">{service.icon}</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4 group-hover:text-burgundy-primary transition-colors">
            {service.name}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>