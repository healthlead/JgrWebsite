---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Projects - JGR Construction">
  <Navbar />
  
  <!-- Hero Section -->
  <section class="bg-[#773B3C] text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">Our Projects</h1>
      <p class="text-xl md:text-2xl max-w-4xl mx-auto">
        Showcasing our expertise in concrete and masonry construction across Miami's most prestigious developments
      </p>
    </div>
  </section>

  <!-- Featured Project -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="bg-[#E7B008] rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-[#773B3C]">Featured Project: Wynwood Station</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div class="text-left">
            <h3 class="text-2xl font-semibold mb-4 text-[#773B3C]">Project Highlights</h3>
            <ul class="space-y-3 text-[#773B3C]">
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#773B3C] rounded-full mt-2 mr-3 flex-shrink-0"></span>
                <span>340,000+ square feet of luxury high-rise construction</span>
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#773B3C] rounded-full mt-2 mr-3 flex-shrink-0"></span>
                <span>Located in the vibrant Wynwood district, Miami</span>
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#773B3C] rounded-full mt-2 mr-3 flex-shrink-0"></span>
                <span>Mixed-use residential and commercial development</span>
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#773B3C] rounded-full mt-2 mr-3 flex-shrink-0"></span>
                <span>Advanced concrete shell construction</span>
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#773B3C] rounded-full mt-2 mr-3 flex-shrink-0"></span>
                <span>Premium masonry and stonework features</span>
              </li>
            </ul>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h4 class="text-xl font-semibold mb-4 text-[#773B3C]">Project Stats</h4>
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center">
                <div class="text-2xl font-bold text-[#E7B008]">340K+</div>
                <div class="text-sm text-gray-600">Square Feet</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-[#E7B008]">24</div>
                <div class="text-sm text-gray-600">Months</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-[#E7B008]">15</div>
                <div class="text-sm text-gray-600">Floors</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-[#E7B008]">100%</div>
                <div class="text-sm text-gray-600">On Time</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Categories -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-[#773B3C]">Project Categories</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        
        <!-- Completed Projects -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h3 class="text-2xl font-bold mb-6 text-[#773B3C]">Completed Projects</h3>
          <div class="space-y-6">
            
            <div class="border-l-4 border-[#E7B008] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Wynwood Station</h4>
              <p class="text-gray-600">340,000 sq ft mixed-use development</p>
              <p class="text-sm text-gray-500">Wynwood, Miami • Completed 2024</p>
            </div>

            <div class="border-l-4 border-[#E7B008] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Brickell Heights Residences</h4>
              <p class="text-gray-600">Luxury high-rise residential tower</p>
              <p class="text-sm text-gray-500">Brickell, Miami • Completed 2023</p>
            </div>

            <div class="border-l-4 border-[#E7B008] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Downtown Miami Office Complex</h4>
              <p class="text-gray-600">Commercial office building with retail</p>
              <p class="text-sm text-gray-500">Downtown Miami • Completed 2023</p>
            </div>

            <div class="border-l-4 border-[#E7B008] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Coral Gables Luxury Condos</h4>
              <p class="text-gray-600">Premium residential construction</p>
              <p class="text-sm text-gray-500">Coral Gables • Completed 2022</p>
            </div>

          </div>
        </div>

        <!-- Upcoming Projects -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h3 class="text-2xl font-bold mb-6 text-[#773B3C]">Upcoming Projects</h3>
          <div class="space-y-6">
            
            <div class="border-l-4 border-[#002642] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Miami Beach Resort & Spa</h4>
              <p class="text-gray-600">Luxury beachfront hospitality project</p>
              <p class="text-sm text-gray-500">Miami Beach • Starting 2025</p>
            </div>

            <div class="border-l-4 border-[#002642] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Aventura Business Center</h4>
              <p class="text-gray-600">Modern commercial complex</p>
              <p class="text-sm text-gray-500">Aventura • Starting 2025</p>
            </div>

            <div class="border-l-4 border-[#002642] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Pinecrest Residential Development</h4>
              <p class="text-gray-600">Upscale residential community</p>
              <p class="text-sm text-gray-500">Pinecrest • Planning Phase</p>
            </div>

            <div class="border-l-4 border-[#002642] pl-4">
              <h4 class="font-semibold text-[#773B3C]">Doral Mixed-Use Plaza</h4>
              <p class="text-gray-600">Retail and office combination</p>
              <p class="text-sm text-gray-500">Doral • Planning Phase</p>
            </div>

          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Service Areas Map Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-[#773B3C]">Service Areas</h2>
      <div class="bg-white rounded-lg shadow-lg p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-2xl font-semibold mb-6 text-[#773B3C]">Miami-Dade County</h3>
            <div class="grid grid-cols-2 gap-4">
              <ul class="space-y-2">
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Wynwood
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Brickell
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Downtown Miami
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Coral Gables
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Miami Beach
                </li>
              </ul>
              <ul class="space-y-2">
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Aventura
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Pinecrest
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Doral
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Medley
                </li>
                <li class="flex items-center text-gray-600">
                  <span class="w-2 h-2 bg-[#E7B008] rounded-full mr-3"></span>
                  Hialeah
                </li>
              </ul>
            </div>
          </div>
          <div class="bg-gray-100 rounded-lg p-6 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-24 h-24 mx-auto mb-4 text-[#E7B008]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              <h4 class="font-semibold text-[#773B3C] mb-2">Serving All of South Florida</h4>
              <p class="text-gray-600">Miami-Dade, Broward, and surrounding counties</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-[#773B3C] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Start Your Next Project</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Ready to join our portfolio of successful projects? Contact us today to discuss your construction needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="bg-[#E7B008] text-[#773B3C] px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-400 transition-colors"
        >
          Get a Quote
        </a>
        <a 
          href="tel:+13052627306" 
          class="bg-transparent border-2 border-[#E7B008] text-[#E7B008] px-8 py-4 rounded-lg text-lg font-semibold hover:bg-[#E7B008] hover:text-[#773B3C] transition-colors"
        >
          Call (305) 262-7306
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>