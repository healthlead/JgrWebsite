---
import { featuredProjects, additionalProjects } from '../data/projects.ts';
const base = import.meta.env.BASE_URL;
---

<section class="py-20 bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Signature Projects</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Proud to have contributed to Miami's most iconic developments and luxury residential projects
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
      {featuredProjects.map((project) => (
        <div class="group relative overflow-hidden rounded-2xl">
          <img 
            src={project.imageUrl} 
            alt={project.name}
            class="w-full h-96 object-cover group-hover:scale-105 transition-transform duration-500" 
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <h3 class="text-2xl font-bold mb-2">{project.name}</h3>
            <p class="text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-ocean-blue hover:bg-ocean-blue px-3 py-1 rounded-full text-sm font-medium">{project.type}</span>
              {project.size && (
                <span class="bg-sunset-orange hover:bg-sunset-orange px-3 py-1 rounded-full text-sm font-medium">{project.size}</span>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional Projects Grid -->
    {additionalProjects && additionalProjects.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {additionalProjects.map((project) => (
          <div class="group relative overflow-hidden rounded-xl">
            <img 
              src={project.imageUrl} 
              alt={project.name}
              class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" 
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h4 class="text-lg font-semibold mb-1">{project.name}</h4>
              <p class="text-gray-300 text-sm">{project.description}</p>
            </div>
          </div>
        ))}
      </div>
    )}
    
    <div class="text-center mt-12">
      <a href={`${base}/contact`} class="bg-sunset-orange text-white hover:bg-orange-600 px-8 py-4 font-semibold rounded-xl transition-colors inline-block">
        Discuss Your Project
      </a>
    </div>
  </div>
</section>