        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Services</h3>
        <ul class="space-y-3">
          <li><a href={`${base}services`} class="text-gray-400 hover:text-white transition-colors">Concrete Shells</a></li>
          <li><a href={`${base}services`} class="text-gray-400 hover:text-white transition-colors">Post-Tension Concrete</a></li>
          <li><a href={`${base}services`} class="text-gray-400 hover:text-white transition-colors">Pre-cast Concrete</a></li>
          <li><a href={`${base}services`} class="text-gray-400 hover:text-white transition-colors">Masonry Construction</a></li>
          <li><a href={`${base}services`} class="text-gray-400 hover:text-white transition-colors">Architectural Concrete</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Company</h3>
        <ul class="space-y-3">
          <li><a href={`${base}about`} class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
          <li><a href={`${base}projects`} class="text-gray-400 hover:text-white transition-colors">Projects</a></li>
          <li><a href={`${base}faq`} class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
          <li><a href={`${base}blog`} class="text-gray-400 hover:text-white transition-colors">Hard Hat Hub</a></li>
          <li><a href={`${base}contact`} class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>
    </div>

    <!-- Certifications -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <h3 class="text-lg font-semibold mb-6 text-center">Certifications & Associations</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="bg-sunflower-yellow text-rich-black rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">OSHA</span>
          </div>
          <div class="text-sm text-gray-400">Safety Certified</div>
        </div>
        <div class="text-center">
          <div class="bg-burgundy-primary text-white rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">CGC</span>
          </div>
          <div class="text-sm text-gray-400">FL Licensed</div>
        </div>
        <div class="text-center">
          <div class="bg-prussian-blue text-white rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">AGC</span>
          </div>
          <div class="text-sm text-gray-400">Member</div>
        </div>
        <div class="text-center">
          <div class="bg-sunflower-yellow text-rich-black rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">BBB</span>
          </div>
          <div class="text-sm text-gray-400">A+ Rating</div>
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-800 text-center">
      <p class="text-gray-400">&copy; 2025 JGR Construction Inc. All rights reserved.</p>
    </div>
  </div>
</footer>