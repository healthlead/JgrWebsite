---
// Hero component for home page
const base = import.meta.env.BASE_URL;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video Background -->
  <video 
    autoplay 
    muted 
    loop 
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
  >
    <source src={`${base}construction-video.mp4`} type="video/mp4">
    <!-- Fallback image if video fails to load -->
    <img 
      src="/images/hero-construction.jpg" 
      alt="JGR Construction" 
      class="w-full h-full object-cover"
    />
  </video>
  
  <!-- Overlay -->
  <div class="absolute top-0 left-0 w-full h-full bg-black/60 z-10"></div>
  
  <!-- Content -->
  <div class="relative z-20 text-center text-white px-6 max-w-4xl mx-auto">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
      Building Miami's
      <span class="text-sunflower-yellow">Future</span>
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-2xl mx-auto">
      Premier structural contractors specializing in concrete and masonry construction 
      for South Florida's most prestigious developments.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href={`${base}contact`}>
        <button class="bg-sunflower-yellow text-rich-black hover:bg-yellow-500 px-8 py-4 text-lg font-semibold rounded-lg transition-colors inline-flex items-center">
          Start Your Project
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>
      </a>
      <a href={`${base}services`}>
        <button class="border-2 border-white text-white hover:bg-white hover:text-prussian-blue px-8 py-4 text-lg font-semibold rounded-lg transition-colors">
          Explore Services
        </button>
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>