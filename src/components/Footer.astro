---
// Footer component
import { companyInfo } from '../data/company';
import { services } from '../data/services';
---

<footer class="bg-rich-black text-white py-16">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <div class="flex items-center mb-6">
          <div class="text-2xl font-bold text-white">JGR</div>
          <div class="ml-4">
            <div class="text-xs text-gray-500">{companyInfo.tagline}</div>
          </div>
        </div>
        <p class="text-gray-300 mb-6 max-w-md">
          Premier structural contractors specializing in concrete and masonry construction 
          for Miami's most prestigious residential and commercial developments.
        </p>
        <div class="flex space-x-4">
          <a href={companyInfo.linkedin} class="text-gray-400 hover:text-sunflower-yellow transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href={companyInfo.instagram} class="text-gray-400 hover:text-sunflower-yellow transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Services</h3>
        <ul class="space-y-3">
          {services.slice(0, 5).map((service) => (
            <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">{service.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Company</h3>
        <ul class="space-y-3">
          <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
          <li><a href="/projects" class="text-gray-400 hover:text-white transition-colors">Projects</a></li>
          <li><a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
          <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Hard Hat Hub</a></li>
          <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>
    </div>

    <!-- Certifications -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <h3 class="text-lg font-semibold mb-6 text-center">Certifications & Associations</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="bg-sunflower-yellow text-rich-black rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">OSHA</span>
          </div>
          <div class="text-sm text-gray-400">Safety Certified</div>
        </div>
        <div class="text-center">
          <div class="bg-burgundy-primary text-white rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">CGC</span>
          </div>
          <div class="text-sm text-gray-400">FL Licensed</div>
        </div>
        <div class="text-center">
          <div class="bg-prussian-blue text-white rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">AGC</span>
          </div>
          <div class="text-sm text-gray-400">Member</div>
        </div>
        <div class="text-center">
          <div class="bg-sunflower-yellow text-rich-black rounded-lg p-4 mb-2 mx-auto w-20 h-20 flex items-center justify-center">
            <span class="font-bold text-lg">BBB</span>
          </div>
          <div class="text-sm text-gray-400">A+ Rating</div>
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-800 text-center">
      <p class="text-gray-400">&copy; 2025 {companyInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer>