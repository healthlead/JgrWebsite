---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "JGR Construction - Premier structural contractors specializing in concrete and masonry construction in South Florida." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* JGR Construction Authentic Brand Colors */
  :root {
    --primary-burgundy: #773B3C;
    --silver-gray: #C3B8B6;
    --rich-black: #111827;
    --sunflower-yellow: #E7B008;
    --prussian-blue: #002642;
    
    /* Legacy color mappings for existing components */
    --ocean-blue: #773B3C; /* Map to primary burgundy */
    --deep-blue: #002642; /* Map to prussian blue */
    --sunset-orange: #E7B008; /* Map to sunflower yellow */
    --construction-green: #773B3C; /* Map to primary burgundy */
  }

  .bg-primary-burgundy { background-color: var(--primary-burgundy); }
  .bg-sunflower-yellow { background-color: var(--sunflower-yellow); }
  .bg-prussian-blue { background-color: var(--prussian-blue); }
  .bg-silver-gray { background-color: var(--silver-gray); }
  .bg-rich-black { background-color: var(--rich-black); }
  .bg-ocean-blue { background-color: var(--ocean-blue); }
  .bg-deep-blue { background-color: var(--deep-blue); }
  .bg-sunset-orange { background-color: var(--sunset-orange); }
  
  .text-primary-burgundy { color: var(--primary-burgundy); }
  .text-sunflower-yellow { color: var(--sunflower-yellow); }
  .text-prussian-blue { color: var(--prussian-blue); }
  .text-silver-gray { color: var(--silver-gray); }
  .text-rich-black { color: var(--rich-black); }
  .text-ocean-blue { color: var(--ocean-blue); }
  .text-deep-blue { color: var(--deep-blue); }
  .text-sunset-orange { color: var(--sunset-orange); }
  
  .border-primary-burgundy { border-color: var(--primary-burgundy); }
  .border-sunflower-yellow { border-color: var(--sunflower-yellow); }
  .border-prussian-blue { border-color: var(--prussian-blue); }
  .border-ocean-blue { border-color: var(--ocean-blue); }

  .hover\:bg-ocean-blue:hover { background-color: var(--ocean-blue); }
  .hover\:bg-deep-blue:hover { background-color: var(--deep-blue); }
  .hover\:bg-sunset-orange:hover { background-color: var(--sunset-orange); }
  .hover\:text-ocean-blue:hover { color: var(--ocean-blue); }

  /* Gradient classes */
  .from-primary-burgundy { --tw-gradient-from: var(--primary-burgundy); --tw-gradient-to: transparent; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to); }
  .to-prussian-blue { --tw-gradient-to: var(--prussian-blue); }
  .from-deep-blue { --tw-gradient-from: var(--deep-blue); --tw-gradient-to: transparent; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to); }
  .to-ocean-blue { --tw-gradient-to: var(--ocean-blue); }

  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
</style>