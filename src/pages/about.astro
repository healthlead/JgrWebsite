---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { teamMembers } from "../data/team";
import { companyInfo } from "../data/company";
---

<Layout
  title="About - JGR Construction"
  description="Learn about JGR Construction's history, mission, and team. Building excellence in Miami since 2009 with expertise in structural concrete and masonry."
>
  <Navbar />

  <!-- Hero Section -->
  <section
    class="pt-40 pb-16 bg-gradient-to-r from-burgundy-primary to-prussian-blue"
  >
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl font-bold text-white mb-6">About JGR Construction</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        Building Miami's future with excellence, innovation, and unwavering
        commitment to quality since {companyInfo.founded}
      </p>
    </div>
  </section>

  <!-- Company Story -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">Our Story</h2>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Founded in {companyInfo.founded}, JGR Construction emerged from a vision to transform
            Miami's skyline through superior structural contracting. Our
            founders, seasoned professionals with decades of combined
            experience, recognized the need for a construction company that
            could deliver both innovative solutions and unwavering quality.
          </p>
          <p class="text-gray-600 mb-6 leading-relaxed">
            What started as a small team of dedicated craftsmen has evolved into
            one of South Florida's most trusted structural contracting
            companies. We've built our reputation project by project, always
            putting quality, safety, and client satisfaction at the forefront of
            everything we do.
          </p>
          <p class="text-gray-600 leading-relaxed">
            Today, JGR Construction stands as a testament to what's possible
            when expertise meets dedication. We continue to push the boundaries
            of what's achievable in structural concrete and masonry
            construction.
          </p>
        </div>
        <div class="relative">
          <img
            src="/images/company-history.jpg"
            alt="JGR Construction history"
            class="rounded-2xl shadow-lg w-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Values -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Our Mission & Values
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Guided by principles that drive excellence in everything we do
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {companyInfo.values.map((value, index) => (
          <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
            <div
              class={`rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 ${
                index === 0 ? 'bg-burgundy-primary' : 
                index === 1 ? 'bg-sunflower-yellow' : 'bg-prussian-blue'
              }`}
            >
              <svg
                class={`w-8 h-8 ${
                  index === 1 ? 'text-rich-black' : 'text-white'
                }`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                {index === 0 && (
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                )}
                {index === 1 && (
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  />
                )}
                {index === 2 && (
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"
                  />
                )}
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              {value.title}
            </h3>
            <p class="text-gray-600">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Our Leadership Team
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Experienced professionals driving our commitment to excellence
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <div class="text-center">
            <div class="relative mb-6">
              <img
                src={member.imageUrl || "/images/placeholder.svg"}
                alt={member.name}
                class="w-48 h-48 rounded-full mx-auto object-cover shadow-lg"
              />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {member.name}
            </h3>
            <p class="text-burgundy-primary font-medium mb-3">{member.position}</p>
            <p class="text-gray-600 text-sm">
              {member.bio}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Our Impact
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Numbers that reflect our commitment to excellence and growth
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold text-burgundy-primary mb-2">
            {companyInfo.stats.yearsExperience}+
          </div>
          <div class="text-gray-600">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-burgundy-primary mb-2">
            {companyInfo.stats.projectsCompleted}+
          </div>
          <div class="text-gray-600">Projects Completed</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-burgundy-primary mb-2">
            {companyInfo.stats.employeeCount}+
          </div>
          <div class="text-gray-600">Team Members</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-burgundy-primary mb-2">
            {companyInfo.stats.activeProjects}
          </div>
          <div class="text-gray-600">Active Projects</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Awards & Recognition -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Awards & Recognition
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Industry recognition for our commitment to excellence and innovation
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white rounded-2xl p-6 shadow-lg text-center">
          <div
            class="bg-sunflower-yellow rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-rich-black"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.518 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Excellence Award
          </h3>
          <p class="text-gray-600 text-sm">
            Miami Construction Association
          </p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg text-center">
          <div
            class="bg-burgundy-primary rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Safety Recognition
          </h3>
          <p class="text-gray-600 text-sm">
            OSHA Partnership Program
          </p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg text-center">
          <div
            class="bg-prussian-blue rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Community Partner
          </h3>
          <p class="text-gray-600 text-sm">
            South Florida Business Journal
          </p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg text-center">
          <div
            class="bg-sunflower-yellow rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-rich-black"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Innovation Award
          </h3>
          <p class="text-gray-600 text-sm">
            Construction Innovation Council
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="py-20 bg-gradient-to-r from-burgundy-primary to-prussian-blue"
  >
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Work With Us?</h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Experience the JGR Construction difference. Let's discuss how we can
        bring your vision to life.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact">
          <button
            class="bg-sunflower-yellow text-rich-black hover:bg-yellow-500 px-8 py-4 text-lg font-semibold rounded-lg transition-colors"
          >
            Start Your Project
          </button>
        </a>
        <a href="/projects">
          <button
            class="border-2 border-white text-white hover:bg-white hover:text-prussian-blue px-8 py-4 text-lg font-semibold rounded-lg transition-colors"
          >
            View Our Work
          </button>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
